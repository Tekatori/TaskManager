@model List<TaskManager.Models.Project>
@using TaskManager.Models;

<div id="grid" class="item-content animate__animated animate__fadeIn active" data-toggle-extra="tab-content">
    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-lg-12 col-md-6 text-center">
                <H3 class="text-center text-muted"><i class="ri-information-line mr-2"></i> Không tìm thấy dự án</H3>
            </div>
        }
        else
        {
            @foreach (var project in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card card-block card-stretch card-height">
                        <div class="card-body">
                            <h5 class="mb-1">@project.Name  </h5>
                            <small id="assignedName-@project.Id" class="text-muted"></small>
                            <p class="mb-3">@project.Description</p>
                            <div class="d-flex align-items-center justify-content-between pt-3 border-top">
                                <a href="/Task/Index?IdProject=@project.Id"
                                   class="btn btn-white text-info link-shadow"
                                   title="Xem chi tiết dự án">
                                    Chi tiết
                                </a>
                                <button class="btn btn-white text-warning link-shadow" onclick="openEditModal(@project.Id)">Sửa</button>
                                <button class="btn btn-white text-danger link-shadow" onclick="confirmDelete(@project.Id)">Xóa</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>
<div id="list" class="item-content animate__animated animate__fadeIn" data-toggle-extra="tab-content">
    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-lg-12 col-md-6 text-center">
                <H3 class="text-center text-muted"><i class="ri-information-line mr-2"></i> Không tìm thấy dự án</H3>
            </div>
        }
        else
        {
            @foreach (var project in Model)
            {
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">

                            <div class="row">
                                <div class="col-sm-8">
                                    <div class="d-flex align-items-center">
                                        <div class="ml-3">
                                            <h5 class="mb-1">@project.Name</h5>
                                            <p class="mb-0">@project.Description <br />Ngày tạo: @project.CreatedAt?.ToString("dd/MM/yyyy")</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4 text-sm-right mt-3 mt-sm-0">
                                    <a href="/Task/Index?IdProject=@project.Id"
                                       class="btn btn-white text-info link-shadow"
                                       title="Xem chi tiết dự án">
                                        Chi tiết
                                    </a>
                                    <button class="btn btn-white text-warning link-shadow" onclick="openEditModal(@project.Id)">Sửa</button>
                                    <button class="btn btn-white text-danger link-shadow" onclick="confirmDelete(@project.Id)">Xóa</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>