@using TaskManager.Models;
@model List<User>
@{
    ViewData["Title"] = "TeamGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<style>

    .custom-modal .modal-dialog {
        max-width: 80%; 
        width: 100%;
    }

    .custom-modal .modal-content {
        padding: 20px;
    }

</style>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-wrap align-items-center justify-content-between breadcrumb-content">
                    <h5><i class="bi bi-people mr-2"></i>Danh sách người dùng</h5>

                    <div class="d-flex align-items-center">
                        <div class="iq-search-bar device-search mr-3">
                            <form id="Search" class="searchbox">
                                <button type="submit" class="search-link"><i class="ri-search-line"></i></button>

                                <input id="searchtext" maxlength="200" type="text" class="text search-input" placeholder="Tên người dùng...">
                            </form>

                        </div>
                        <div class="nav-item nav-icon search-content mr-3">
                            <a href="javascript:void(0)" class="search-toggle rounded" id="dropdownSearch" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="ri-search-line"> <span style="color:ActiveCaption">Tìm kiếm</span></i>
                            </a>
                            <div class="iq-search-bar iq-sub-dropdown dropdown-menu" aria-labelledby="dropdownSearch">
                                <form id="SearchMobile" class="searchbox p-2">
                                    <div class="form-group mb-0 position-relative">
                                        <input id="searchtext2" maxlength="200" class="text search-input font-size-12" placeholder="Tên người dùng...">
                                        <button type="submit" href="javascript:void(0)" class="search-link"><i class="ri-search-line"></i></button>
                                    </div>
                                </form>
                            </div>
                        </div>



                        <div class="list-grid-toggle d-flex align-items-center mr-3">
                            <button type="button" class="btn btn-warning" id="btnClearSearch">
                                <i class="bi bi-eraser"></i>
                            </button>
                        </div>



                        <div class="list-grid-toggle d-flex align-items-center mr-3">
                            <div data-toggle-extra="tab" data-target-extra="#grid" class="active">
                                <div class="grid-icon mr-3">
                                    <svg width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <rect x="3" y="3" width="7" height="7"></rect>
                                        <rect x="14" y="3" width="7" height="7"></rect>
                                        <rect x="14" y="14" width="7" height="7"></rect>
                                        <rect x="3" y="14" width="7" height="7"></rect>
                                    </svg>
                                </div>
                            </div>
                            <div data-toggle-extra="tab" data-target-extra="#list">
                                <div class="grid-icon">
                                    <svg width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <line x1="21" y1="10" x2="3" y2="10"></line>
                                        <line x1="21" y1="6" x2="3" y2="6"></line>
                                        <line x1="21" y1="14" x2="3" y2="14"></line>
                                        <line x1="21" y1="18" x2="3" y2="18"></line>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="roleUser-container">
    @Html.Partial("_ListRoleUser", Model)
</div>


<div class="modal fade bd-example-modal-lg" role="dialog" aria-modal="true" id="updateRoleModal">
    <div class="modal-dialog modal-dialog-centered modal-lg custom-modal" role="document">
        <form id="updateRoleForm">
            <div class="modal-content">
                <div class="modal-header d-block text-center pb-3 border-bttom">
                    <h3 class="modal-title" id="editTaskModalLabel">
                        <i class="ri-user-line"></i> Cập nhật vai trò
                    </h3>

                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-lg-12">
                            <input type="hidden" id="userId" name="Id" />
                        </div>

                        <div class="col-lg-12">
                            <label for="editRole" class="h5">Loại người đùng</label>
                            <div class="dropdown bootstrap-select form-control">
                                <select id="editRole" name="Role" class="form-control" data-style="py-0">
                                    @foreach (var role in Enum.GetValues(typeof(CommonEnums.Role)).Cast<CommonEnums.Role>())
                                    {
                                        <option value="@((int)role)" @(role == CommonEnums.Role.User ? "selected" : "")>
                                            @CommonEnums.GetDescription(role)
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="d-flex flex-wrap align-items-ceter justify-content-end mt-4">
                                <button type="submit" class="btn btn-primary mr-3"><i class="fas fa-save"></i>Lưu</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bi bi-x-circle"></i>Đóng</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        function openPopupEdit(userId, userRole) {
            $('#userId').val(userId);
            $('#editRole').val(userRole).selectpicker('refresh');  

            $('#updateRoleModal').modal('show');
        }



        $('#updateRoleForm').on('submit', function (e) {
            e.preventDefault();  

            var userId = $('#userId').val();
            var newRole = $('#editRole').val();

            $.ajax({
                url: '/User/UpdateRole',  
                type: 'POST',
                data: {
                    Id: userId,
                    Role: newRole
                },
                success: function (response) {
                    if (response.success) {
                        showAlert('Cập nhật thành công!', 'success');
                        $('#updateRoleModal').modal('hide');
                        $('#roleUser-container').load('/User/_RoleUser', function () {
                                 let currentView = $('.list-grid-toggle > div.active').data('target-extra');
                                 restoreProjectView(currentView);
                             });
                           
                    } else {
                        var mess = response.message || 'Không thể cập nhật vai trò';
                        showAlert(mess, 'info');                       
                    }
                },
                error: function () {
                    showAlert('Đã xảy ra lỗi khi cập nhật vai trò', 'error');
                }
            });
        });

         function restoreProjectView(currentView) {
            $('.list-grid-toggle > div').removeClass('active');
            $('.list-grid-toggle > div[data-target-extra="' + currentView + '"]').addClass('active');
            $('[data-toggle-extra="tab-content"]').removeClass('active');
            $(currentView).addClass('active');
        }

       $(document).on('click', '#btnClearSearch', function () {
            $('#searchtext').val('');
            $('#searchtext2').val('');
            doFilter();
        });

        function doFilter() {
             const text = $('#searchtext').val().trim();
             const text2 = $('#searchtext2').val().trim();
             let currentView = $('.list-grid-toggle > div.active').data('target-extra');

             let ptextsearch = '';
                  if (window.innerWidth <= 576) {
                      ptextsearch = text2;
                  } else {
                      ptextsearch = text;
                  }

                  $.ajax({
                      url: '/User/_RoleUser',
                      type: 'GET',
                      data: {
                          searchText: ptextsearch
                      },
                      success: function (html) {
                          $('#roleUser-container').html(html);
                          restoreProjectView(currentView);
                      },
                      error: function () {
                          showAlert('Lỗi khi lọc người dùng', 'error');
                      }
                  });
        }

           $(document).ready(function () {
            $('#Search').on('submit', function (e) {
                e.preventDefault();
                doFilter();
            });

            $('#SearchMobile').on('submit', function (e) {
                e.preventDefault();
                doFilter();
            });
        });


    </script>
    


}