@{
    Layout = "_Layout";
    ViewData["Title"] = "Giới thiệu";
    var username = Context.Session.GetString("username")
           ?? User.Identity?.Name;
}

<div class="container">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="display-5 fw-bold">Quản lý công việc hiệu quả hơn</h1>
            <p class="lead">Task Manager giúp bạn theo dõi, phân công, và hoàn thành công việc dễ dàng. Giao diện đơn giản, hoạt động mượt mà, phù hợp cho cá nhân và nhóm.</p>

            @if (!string.IsNullOrEmpty(username))
            {
                <a href="/Home/Index" class="btn btn-primary btn-lg">Bắt đầu ngay</a>
            }
            else
            {
                <a href="/User/Login" class="btn btn-primary btn-lg">Bắt đầu ngay</a>
            }      
        </div>
        <div class="col-md-6 text-center">
            <img src="https://cdn-icons-png.flaticon.com/512/2921/2921222.png" class="img-fluid" style="max-height: 300px;" />
        </div>
    </div>

    <hr class="my-5" />

    <div class="row text-center">
        <div class="col-md-4">
            <h4>🧠 Giao diện thông minh</h4>
            <p>Dễ sử dụng, phù hợp mọi trình độ.</p>
        </div>
        <div class="col-md-4">
            <h4>⚡ Theo dõi tiến độ</h4>
            <p>Xem trạng thái từng công việc theo thời gian thực.</p>
        </div>
        <div class="col-md-4">
            <h4>👥 Làm việc nhóm</h4>
            <p>Giao việc và quản lý hiệu suất nhóm hiệu quả.</p>
        </div>
    </div>
</div>
